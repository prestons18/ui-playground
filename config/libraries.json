{
  "libraries": {
    "core": {
      "name": "Core Components",
      "version": "1.0.0",
      "components": [
        {
          "id": "button",
          "name": "Button",
          "category": "inputs",
          "description": "Primary button component with multiple variants",
          "tags": ["interactive", "form", "action"],
          "props": {
            "text": "Button",
            "variant": "primary",
            "size": "md",
            "disabled": false
          }
        },
        {
          "id": "input",
          "name": "Input",
          "category": "inputs",
          "description": "Text input component with validation support",
          "tags": ["form", "text", "validation"],
          "props": {
            "type": "text",
            "placeholder": "Input",
            "size": "md",
            "error": ""
          }
        }
      ]
    },
    "layout": {
      "name": "Layout Components",
      "version": "1.0.0",
      "components": [
        {
          "id": "container",
          "name": "Container",
          "category": "layout",
          "description": "Responsive container with max-width",
          "tags": ["layout", "responsive"],
          "props": {
            "maxWidth": "100%",
            "padding": "0"
          }
        }
      ]
    }
  },
  "providers": {
    "theme": {
      "name": "ThemeProvider",
      "description": "Global theme provider with dark mode support",
      "config": {
        "defaultTheme": "light",
        "enableSystemTheme": true
      }
    },
    "toast": {
      "name": "ToastProvider",
      "description": "Global toast notifications system",
      "config": {
        "position": "bottom-right",
        "duration": 5000
      }
    }
  }
} 